<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= link_to "◀", user_path(date: @first_day.prev_month), class: " btn btn-info" %>
        <%= l(@first_day, format: :middle) %> 時間管理表
        <%= link_to "▶", user_path(date: @first_day.next_month), class: " btn btn-info" %>
      </td>
      <td>指定勤務時間：<%= format_basic_info(@user.work_time) %></td>
      <td colspan="3">基本時間：<%= format_basic_info(@user.basic_time) %></td>
      <td>初日：<%= l(@first_day, format: :short) %></td>
    </tr>
    
    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>氏名：<%= @user.name %></td>
      <td>コード</td>
      <td></td>
      <td>出勤日数： <%= @worked_sum %>日</td>
      <td>締め：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>
<div class="btn-users-show">
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
</div>

<div>
  <% total_working_hours = 0.0 %>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="2">日付</th>
        <th rowspan="2">曜日</th>
        <th>出社</th>
        <th></th>
        <th></th>
        <th>退社</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th>在社時間</th>
        <th>備考</th>
      </tr>
    </thead>
    
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td class="<%= day.worked_on.strftime('%a').downcase %>">
            <%= $days_of_the_week[day.worked_on.wday] %>
          </td>
          <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
          <td><%= format_rounded_minutes(day.started_at) if day.started_at.present? %></td>
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
          <td><%= format_rounded_minutes(day.finished_at) if day.finished_at.present? %></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <% start_time = day.started_at.strftime("%H:%M") %>
              <% end_time = day.finished_at.strftime("%H:%M") %>
              <% working_hours = (day.finished_at - day.started_at) / 3600.0 %>
              <%= working_hours.round(2) %>
              <% total_working_hours += working_hours %>
            <% end %>
          </td>
          <td><%= day.note %></td>
      <% end %>
    </tbody>
    
    <tfoot>
      <tr>
        <td colspan="2"><%= format_basic_info(@user.basic_time).to_f * @worked_sum %></td>
        <td colspan="5"></td>
        <td><%= format("%.2f", total_working_hours) %></td>
        <td>所属長承認</td>
      </tr>
    </tfoot>
  </table>
</div>